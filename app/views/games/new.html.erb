<div class="container mt-3">
  <ul class="list-group list-group-horizontal position-relative overflow-auto w-75">
    <% @letters.each do |letter| %>
      <li class="list-group-item list-group-item-primary ml-3"><%= letter %></li>
    <%  end %>
  </ul>



<div class="input-group mb-3">
    <form action="score" method= "post" data-turbo="false" class="d-flex justify-content-center mt-3">
      <input type="text" name="question" class="form-control" aria-describedby="button-addon1">
      <input type="submit" value="try!" class="btn btn-primary" type="button" id="button-addon1">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>

</form>

</div>
